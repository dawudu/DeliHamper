<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.manthole.delihamper.Content"
    tools:showIn="@layout/app_bar_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/hamperA"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/packagea" />


        <TextView
            android:id="@+id/txtPackageA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#4f0e0d0e"
            android:gravity="center"
            android:text="HAMPER A"
            android:textColor="@color/colorwhite"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/hamperB"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/packageb" />


        <TextView
            android:id="@+id/txtPackageB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#4f0e0d0e"
            android:gravity="center"
            android:text="HAMPER B"
            android:textColor="@color/colorwhite"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/hamperC"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/packagec" />


        <TextView
            android:id="@+id/txtPackageC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#4f0e0d0e"
            android:gravity="center"
            android:text="HAMPER C"
            android:textColor="@color/colorwhite"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/hamperD"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/packaged" />


        <TextView
            android:id="@+id/txtPackageD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#4f0e0d0e"
            android:gravity="center"
            android:text="HAMPER D"
            android:textColor="@color/colorwhite"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/hamperE"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/packagee" />


        <TextView
            android:id="@+id/txtPackageE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#4f0e0d0e"
            android:gravity="center"
            android:text="HAMPER E"
            android:textColor="@color/colorwhite"
            android:textSize="20sp" />


    </LinearLayout>

</ScrollView>
